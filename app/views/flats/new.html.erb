<div class="container">
  <h1>New review</h1>
  <%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.number_field :price_per_night %>
  <%= f.number_field :number_of_guests %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
